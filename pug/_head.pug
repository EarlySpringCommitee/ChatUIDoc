//- 標題用模板
mixin bigheader(name,subheader) 
    h2.ts.header(id=name)
        a.anchor(href='#'+name) #
        =name
        block
        span.sub.header=subheader
//- 標題用模板
mixin header(name,subheader) 
    h3.ts.header(id=name)
        a.anchor(href='#'+name) #
        =name
        block
        span.sub.header=subheader
//- 程式碼用模板
mixin code
    .ts.secondary.code.segment
        .ts.top.right.attached.label 原始碼
        block
    br